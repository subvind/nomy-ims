<div class="card">
  <div class="card-content">
    <span class="title">Register</span>
    <form 
      hx-post="/auth/register"
      hx-target="#user-registered"
      hx-swap="innerHTML"
      hx-trigger="submit"
    >
      <p style="margin: 0;">username:</p>
      <input type="text" name="username" placeholder="test" required>
      <br />
      <p style="margin: 0;">password:</p>
      <input type="password" name="password" placeholder="test123" required>
      <br />
      <p style="margin: 0;">confirm password:</p>
      <input type="password" name="confirmPassword" placeholder="test123" required>
      <br />
      <button type="submit" class="btn black btn-small">Submit</button>
    </form>
    <br />
    <div class="result" id="user-registered">
      Result will be displayed here.
    </div>
  </div>
</div>

<style>
  .result {
    border: 5px dashed #eee;
    padding: 1em;
  }
</style>