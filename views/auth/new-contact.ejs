<div class="card">
  <div class="card-content">
    <span class="title">New Contact</span>
    <form 
      hx-post="/contacts"
      hx-target="#contact-created"
      hx-swap="innerHTML"
      hx-trigger="submit"
    >
      <p style="margin: 0;">email address:</p>
      <input type="text" name="emailAddress" placeholder="test@test.com" required>
      <br />
      <p style="margin: 0;">phone number:</p>
      <input type="text" name="phoneNumber" placeholder="3215551234" required>
      <br />
      <button type="submit" class="btn black btn-small">Submit</button>
    </form>
    <br />
    <div class="result" id="contact-created">
      Result will be displayed here.
    </div>
  </div>
</div>

<style>
  .result {
    border: 5px dashed #eee;
    padding: 1em;
  }
</style>