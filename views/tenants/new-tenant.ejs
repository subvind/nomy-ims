<div class="card">
  <span class="title">New Tenant</span>
  <br />
  <div class="row">
    <div class="col s12 m6">
      <form 
        hx-post="/tenants"
        hx-target="#tenant-created"
        hx-swap="innerHTML"
        hx-trigger="submit"
      >
        <p style="margin: 0;">slug:</p>
        <input type="text" name="slug" placeholder="alpha" required>
        <br />
        <p style="margin: 0;">description:</p>
        <textarea class="materialize-textarea" name="description" placeholder="data silo for alpha" required></textarea>
        <br />
        <button type="submit" class="btn black btn-small">Submit</button>
      </form>
      <br class="hide-on-med-and-up" />
    </div>
    <div class="col s12 m6">
      <div class="result" id="tenant-created">
        Result will be displayed here.
      </div>
    </div>
  </div>
</div>

<style>
  .result {
    border: 5px dashed #eee;
    padding: 1em;
  }
  .title {
    border: 1px solid #000;
    font-size: 1.5em;
    position: absolute; 
    top: -0.8em; 
    left: 0.5em; 
    background-color: #aaa;
    padding: 0 0.5em;
  }
  .card {
    border: 1px solid #000;
    position: relative;
    background: #fff;
  }
</style>